<h2>Log in here!</h2>
<% if flash.has?(:message) %>
  <p><em><%= flash[:message] %></em></p>
<% end %>
<form action="/login" method="post">
  <p>Username: <input type="text" name="username"></p>
  <p>Password: <input type="password" name="password"></p>
  <p><input type="submit" value="Log In"></p>
</form>
